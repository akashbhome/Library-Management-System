<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Dashboard</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>

  <style>

    aside {
      background: rgba(33, 33, 33, 0.9);
      backdrop-filter: blur(10px);
      border-right: 1px solid rgba(255, 255, 255, 0.1);
      height: 100vh;
      padding: 2rem 1rem;
      overflow-y: auto;
    }

    h3 a {
      color: #ffc107;
      font-weight: bold;
      text-decoration: none;
    }

    .accordion-item {
      background-color: transparent;
      border: none;
      border-radius: 12px;
      overflow: hidden;
      margin-bottom: 1rem;
    }

    .accordion-button {
      background-color: #2b2b2b;
      color: #fff;
      font-weight: 500;
      transition: background 0.3s ease;
      border-radius: 0 !important;
    }

    .accordion-button:hover,
    .accordion-button:focus {
      background-color: #444;
      color: #ffc107;
    }

    .accordion-button::after {
      filter: brightness(0) invert(1);
    }

    .accordion-body {
      background-color: #333;
      padding: 1rem;
      border-radius: 0 0 10px 10px;
    }

    .accordion-body a.btn {
      border-radius: 8px;
      transition: all 0.3s ease-in-out;
    }

    .btn-outline-primary:hover {
      background-color: #0d6efd;
      color: #fff;
      border-color: #0d6efd;
    }

    .btn-outline-success:hover {
      background-color: #198754;
      color: #fff;
      border-color: #198754;
    }

    .btn-outline-danger:hover {
      background-color: #dc3545;
      color: #fff;
      border-color: #dc3545;
    }

    .btn-outline-dark:hover {
      background-color: #ffc107;
      color: #000;
      border-color: #ffc107;
    }

    ::-webkit-scrollbar {
      width: 6px;
    }

    ::-webkit-scrollbar-thumb {
      background-color: #555;
      border-radius: 10px;
    }
  </style>
</head>

<body>
  <aside class="w-100 h-100">
    <div class="accordion mt-4" id="dashboardAccordion">
      <div class="text-center mb-5">
        <h3><a href="/userdash?id=<%=user.id%>">ðŸ‘¤ User Dashboard</a></h3>
      </div>

      <!-- Profile -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingStudent">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#collapseStudent" aria-expanded="false" aria-controls="collapseStudent">
            <i class="fas fa-user-circle me-2"></i> Profile
          </button>
        </h2>
        <div id="collapseStudent" class="accordion-collapse collapse" aria-labelledby="headingStudent"
             data-bs-parent="#dashboardAccordion">
          <div class="accordion-body">
            <a href="/userProfile?id=<%=user.id%>" class="btn btn-outline-primary w-100">
              <i class="fa fa-address-card-o me-2"></i> View Profile
            </a>
          </div>
        </div>
      </div>

      <!-- View Books -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingCategory">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#collapseCategory" aria-expanded="false" aria-controls="collapseCategory">
            <i class="fas fa-book-open me-2"></i> View Books
          </button>
        </h2>
        <div id="collapseCategory" class="accordion-collapse collapse" aria-labelledby="headingCategory"
             data-bs-parent="#dashboardAccordion">
          <div class="accordion-body">
            <a href="/userViewBook?id=<%=user.id%>" class="btn btn-outline-success w-100">
              <i class="fas fa-eye me-2"></i> View Book
            </a>
          </div>
        </div>
      </div>

      <!-- Issue Books -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingBooks">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#collapseBooks" aria-expanded="false" aria-controls="collapseBooks">
            <i class="fas fa-book-reader me-2"></i> Issue Book
          </button>
        </h2>
        <div id="collapseBooks" class="accordion-collapse collapse" aria-labelledby="headingBooks"
             data-bs-parent="#dashboardAccordion">
          <div class="accordion-body">
            <a href="/userIssueBookPage?id=<%=user.id%>" class="btn btn-outline-danger w-100">
              <i class="fas fa-arrow-right-to-bracket me-2"></i> Issue Books
            </a>
          </div>
        </div>
      </div>

      <!-- History -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingIssueBook">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                  data-bs-target="#collapsIssuseBook" aria-expanded="false" aria-controls="collapsIssuseBook">
            <i class="fas fa-clock-rotate-left me-2"></i> History
          </button>
        </h2>
        <div id="collapsIssuseBook" class="accordion-collapse collapse" aria-labelledby="headingIssueBook"
             data-bs-parent="#dashboardAccordion">
          <div class="accordion-body">
            <a href="/userHistory?id=<%=user.id%>" class="btn btn-outline-dark w-100">
              <i class="fas fa-history me-2"></i> View History
            </a>
          </div>
        </div>
      </div>
    </div>
  </aside>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>
</body>
</html>
