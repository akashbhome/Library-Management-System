<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Category</title>
    <link rel="stylesheet" href="/css/viewcategory.css">
</head>
<body>
    <%-include("nav.ejs")%>
    <div class="main w-100 ">
        <div class="side">
            <%-include("aside.ejs")%>
        </div>
        <div class="rigth">
        <div class="addStd">
            <table class="table table-striped table-bordered mt-5 p-5 w-75 m-5 ">
  <thead>
    <tr>
      <th scope="col">sr.no</th>
      <th scope="col">Name</th>
      <th scope="col">Update</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody id="tbody">
      <% if (cat.length == 0) { %>
    <tr><td colspan="4">NO data Available</td></tr>
    <% } else {
                cat.forEach((item, index) => {
        %>
        <tr>
      <td><%= index+1 %></td>
      <td><%= item.name %></td>
      <td><a href="/deletecategory?id=<%=item.id%>">Delete</a></td>
      <td><a href="/updatecategory?id=<%=item.id%>">Update</a></td>
    </tr>
    <%})}%>
  </tbody>
</table>
    </div>
</div>
</div>
</body>
</html>