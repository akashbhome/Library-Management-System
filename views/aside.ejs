<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"  />
<link rel="stylesheet" href="/css/aside.css">
</head>
<body>
    <aside>
          <div class="accordion mt-5" id="dashboardAccordion">

                    <!-- Student Section -->
                   <div class="accordion-item mt-3 bg-dark text-white">
                        <h2 class="accordion-header " id="headingStudent">
                            <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseStudent" aria-expanded="false" aria-controls="collapseStudent">
                                <i class="fas fa-user-graduate"></i>&nbsp;&nbsp;Student
                            </button>
                        </h2>
                        <div id="collapseStudent" class="accordion-collapse collapse" aria-labelledby="headingStudent"
                            data-bs-parent="#dashboardAccordion">
                            <div class="accordion-body">
                                <a href="/addReg" class="btn btn-outline-primary w-100 mb-2">Add Student</a>
                                <a href="/view" class="btn btn-outline-primary w-100 ">View Student</a>
                            </div>
                        </div>
                    </div>

                    <!-- Category Section -->
                    <div class="accordion-item mt-3 bg-dark text-white">
                        <h2 class="accordion-header" id="headingCategory">
                            <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseCategory" aria-expanded="false"
                                aria-controls="collapseCategory">
                                <i class="fas fa-tags"></i>&nbsp;&nbsp;Category
                            </button>
                        </h2>
                        <div id="collapseCategory" class="accordion-collapse collapse" aria-labelledby="headingCategory"
                            data-bs-parent="#dashboardAccordion">
                            <div class="accordion-body">
                                <a href="/addcategory" class="btn btn-outline-success w-100 mb-2">Add Category</a>
                                <a href="/viewcategory" class="btn btn-outline-success w-100">View Category</a>
                            </div>
                        </div>
                    </div>

                    <!-- Books Section -->
                    <div class="accordion-item mt-3 bg-dark text-white">
                        <h2 class="accordion-header" id="headingBooks">
                            <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseBooks" aria-expanded="false" aria-controls="collapseBooks">
                                <i class="fas fa-book"></i>&nbsp;&nbsp;Books
                            </button>
                        </h2>
                        <div id="collapseBooks" class="accordion-collapse collapse" aria-labelledby="headingBooks"
                            data-bs-parent="#dashboardAccordion">
                            <div class="accordion-body">
                                <a href="/addBookPage" class="btn btn-outline-danger w-100 mb-2">Add Books</a>
                                <a href="/viewbook" class="btn btn-outline-danger w-100">View Books</a>
                            </div>
                        </div>
                    </div>

                    <!-- Issue Book Section -->
                     <div class="accordion-item mt-3 bg-dark text-white">
                        <h2 class="accordion-header" id="headingIssueBook">
                            <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapsIssuseBook" aria-expanded="false" aria-controls="collapsIssuseBook">
                                <i class="fas fa-hand-holding"></i> <i class="fas fa-book"></i>&nbsp;&nbsp;Issue Book
                            </button>
                        </h2>
                        <div id="collapsIssuseBook" class="accordion-collapse collapse" aria-labelledby="headingIssueBook"
                            data-bs-parent="#dashboardAccordion">
                            <div class="accordion-body">
                                <a href="/IssueBookPage" class="btn btn-outline-warning w-100 mb-2">Issue Book</a>
                            </div>
                        </div>
                    </div>
                
                
                    <!-- Return Book Section -->
                    <div class="accordion-item mt-3 bg-dark text-white">
                        <h2 class="accordion-header" id="headingReturnBook">
                            <button class="accordion-button collapsed bg-dark text-white" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapsReturnBook" aria-expanded="false" aria-controls="collapsReturnBook">
                                Return Book
                            </button>
                        </h2>
                        <div id="collapsReturnBook" class="accordion-collapse collapse" aria-labelledby="headingReturnBook"
                            data-bs-parent="#dashboardAccordion">
                            <div class="accordion-body">
                                <a href="/ReturnBookPage" class="btn btn-outline-info w-100 mb-2">Return Book</a>
                            </div>
                        </div>
                    </div>
                    </div>
        </aside>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        crossorigin="anonymous"></script>
</body>
</html>