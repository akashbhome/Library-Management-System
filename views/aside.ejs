<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Styled Sidebar</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"/>

  <style>
    body {
      margin: 0;
      background-color: #a19d9d;
      color: white;
    }

    aside {
      background-color: #1e1e1e;
      color: white;
      height: 100vh;
      padding: 2rem 1rem;
      border-right: 1px solid #333;
      overflow-y: auto;
    }

    h4 a {
      color: #ffc107 !important;
      text-decoration: none;
    }

    .accordion-button {
      background-color: #2c2c2c !important;
      color: #f1f1f1 !important;
      border-radius: 8px;
      transition: all 0.3s ease;
    }

    .accordion-button:hover {
      background-color: #444 !important;
      color: #ffc107 !important;
    }

    .accordion-button::after {
      filter: brightness(0) invert(1);
    }

    .accordion-item {
      background-color: transparent;
      border: none;
      margin-bottom: 1rem;
    }

    .accordion-body {
      background-color: #b2a6a6;
      border-radius: 10px;
      padding: 1rem;
    }

    .accordion-body a.btn {
      color: #fff;
      border-color: #fff;
      transition: all 0.3s ease-in-out;
      border-radius: 8px;
    }

    .accordion-body a.btn:hover {
      background-color: #ffc107;
      color: #000;
      border-color: #ffc107;
    }

    ::-webkit-scrollbar {
      width: 6px;
    }

    ::-webkit-scrollbar-thumb {
      background-color: #555;
      border-radius: 10px;
    }
  </style>
</head>

<body>
  <aside class="w-100 h-100">
    <div class="accordion" id="dashboardAccordion">
      <div class="mb-5 text-center">
        <h4><a href="/admin" class="fw-bold">üìä Dashboard</a></h4>
      </div>

      <!-- Student Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingStudent">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseStudent" aria-expanded="false">
            <i class="fas fa-user-graduate me-2"></i> Student
          </button>
        </h2>
        <div id="collapseStudent" class="accordion-collapse collapse">
          <div class="accordion-body">
            <a href="/addReg" class="btn btn-outline-light w-100 mb-2"><i class="fa fa-address-book me-2"></i> Add Student</a>
            <a href="/view" class="btn btn-outline-light w-100"><i class="fa fa-address-card-o me-2"></i> View Student</a>
          </div>
        </div>
      </div>

      <!-- Category Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingCategory">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCategory" aria-expanded="false">
            <i class="fas fa-tags me-2"></i> Category
          </button>
        </h2>
        <div id="collapseCategory" class="accordion-collapse collapse">
          <div class="accordion-body">
            <a href="/addcategory" class="btn btn-outline-success w-100 mb-2"><i class="fas fa-folder-plus me-2"></i> Add Category</a>
            <a href="/viewcategory" class="btn btn-outline-success w-100"><i class="fas fa-eye me-2"></i> View Category</a>
          </div>
        </div>
      </div>

      <!-- Books Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingBooks">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseBooks" aria-expanded="false">
            <i class="fas fa-book me-2"></i> Books
          </button>
        </h2>
        <div id="collapseBooks" class="accordion-collapse collapse">
          <div class="accordion-body">
            <a href="/addBookPage" class="btn btn-outline-danger w-100 mb-2"><i class="fas fa-folder-plus me-2"></i> Add Books</a>
            <a href="/viewbook" class="btn btn-outline-danger w-100"><i class="fas fa-eye me-2"></i> View Books</a>
          </div>
        </div>
      </div>

      <!-- Issue Book Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingIssueBook">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseIssueBook" aria-expanded="false">
            <i class="fas fa-hand-holding me-1"></i><i class="fas fa-book me-2"></i> Issue Book
          </button>
        </h2>
        <div id="collapseIssueBook" class="accordion-collapse collapse">
          <div class="accordion-body">
            <a href="/IssueBookPage" class="btn btn-outline-warning w-100 mb-2">üìï Issue Book</a>
          </div>
        </div>
      </div>

      <!-- Return Book Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingReturnBook">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseReturnBook" aria-expanded="false">
            üîÅ Return Book
          </button>
        </h2>
        <div id="collapseReturnBook" class="accordion-collapse collapse">
          <div class="accordion-body">
            <a href="/ReturnBookPage" class="btn btn-outline-info w-100 mb-2">Return Book</a>
          </div>
        </div>
      </div>

      <!-- History Section -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingHistory">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseHistory" aria-expanded="false">
            üìñ All History
          </button>
        </h2>
        <div id="collapseHistory" class="accordion-collapse collapse">
          <div class="accordion-body">
            <a href="/AllHistory" class="btn btn-outline-light w-100 mb-2">View History</a>
          </div>
        </div>
      </div>
    </div>
  </aside>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
