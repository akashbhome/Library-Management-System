<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Users</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/view.css">
  <link rel="stylesheet" href="/css/navSide.css">
  <style>
    .pagination-btn {
      margin: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
   <%-include("adminNav.ejs")%>
    <div class="container-fluid px-0">
 
  <div class="row g-0">
    
   
    <div class="col-2 p-0">
      <%- include("aside.ejs") %>
    </div>
    <div class="col-8">
   <div class="container mt-4 w-100 pl-5">
        <div class="mb-3 w-25 mx-5">
          <input type="text" id="searchInput" class="form-control" placeholder="Search by Name..." />
        </div>

        <table class="table table-striped table-bordered mx-5 mt-5">
          <thead>
            <tr>
              <th>Sr. No</th>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Admission Date</th>
              <th>Delete</th>
              <th>Update</th>
            </tr>
          </thead>
          <tbody id="userTableBody">
            <% data.forEach((item, index) => { %>
              <tr>
                <td class="sr-no"><%= index + 1 %></td>
                <td class="user-name"><%= item.name %></td>
                <td><%= item.email %></td>
                <td><%= item.role %></td>
                <td><%= item.created_at.toLocaleString() %></td>
                <td><button class="UD_Btn UD_del"><a href="/deleteUser?id=<%= item.id %>">Delete</a></button></td>
                <td><button class="UD_Btn UD_upd"><a href="/update?id=<%= item.id %>">Update</a></button></td>
              </tr>
            <% }) %>
          </tbody>
        </table>

        <div class="text-center" id="paginationContainer"></div>
      </div>
    </div>
</div>

        </div>

  <script>
    const rowsPerPage = 5;
    let currentPage = 1;

    const searchInput = document.getElementById("searchInput");
    const tableBody = document.getElementById("userTableBody");
    const paginationContainer = document.getElementById("paginationContainer");

    let allRows = Array.from(tableBody.querySelectorAll("tr"));

    function paginate(rows, page, perPage) {
      const start = (page - 1) * perPage;
      const end = start + perPage;
      return rows.slice(start, end);
    }

    function renderTable(rows) {
      tableBody.innerHTML = "";
      rows.forEach((row, i) => {
        row.querySelector(".sr-no").innerText = i + 1;
        tableBody.appendChild(row);
      });
    }

    function renderPagination(totalRows) {
      paginationContainer.innerHTML = "";
      const pageCount = Math.ceil(totalRows / rowsPerPage);
      for (let i = 1; i <= pageCount; i++) {
        const btn = document.createElement("button");
        btn.className = "btn btn-sm btn-outline-primary pagination-btn";
        btn.innerText = i;
        btn.onclick = () => {
          currentPage = i;
          updateDisplay();
        };
        paginationContainer.appendChild(btn);
      }
    }

    function updateDisplay() {
      const searchValue = searchInput.value.toLowerCase();
      const filtered = allRows.filter(row => {
        const name = row.querySelector(".user-name").innerText.toLowerCase();
        return name.includes(searchValue);
      });

      const paginated = paginate(filtered, currentPage, rowsPerPage);
      renderTable(paginated);
      renderPagination(filtered.length);
    }

    searchInput.addEventListener("input", () => {
      currentPage = 1;
      updateDisplay(); 
    });

    updateDisplay(); // Initial call
  </script>
</body>
</html>
