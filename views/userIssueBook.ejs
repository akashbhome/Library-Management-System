<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Issue Book Page</title>
  <link rel="stylesheet" href="/css/navSide.css">
  <style>
     body{
            min-height:100vh;
            border:solid;
        }
        .high{
            min-height: 89vh;
        }
  </style>
</head>

<body>
  <%-include("userNavBar.ejs")%>
    <div class="container-fluid px-0 h-100">

      <div class="row g-0 high">

        <div class="col-2 p-0 ">
          <%- include("userAside.ejs") %>
        </div>
        <div class="col-10 border">
          <div class="m-5"><h2>Issue Book</h2></div>
          <table class="table table-striped table-bordered mt-5 p-5 w-75 m-5 ">
            <thead>
              <tr>
                <th>Sr.no</th>
                <th scope="col">Title</th>
                <th scope="col">Issue Date</th>
                <th>Return Date</th>
                <th>Status</th>

              </tr>
            </thead>
            <tbody id="tbody">
              <% if (issue.length==0) { %>
                <tr>
                  <td colspan="5">NO data Available</td>
                </tr>
                <% } else { issue.forEach((item, index)=> {
                  %>
                  <tr>
                    <td> 
                      <%= index+1 %>
                    </td>
                    <td>
                      <%= item.title %>
                    </td>
                    <td>
                      <%= item.issue_date.toLocaleDateString() %>
                    </td>
                    <td>
                      <%= item.return_date.toLocaleDateString() %>
                    </td>
                    <td>
                      <%= item.status %>
                    </td>


                    <%})}%>
            </tbody>
          </table>
        </div>
      </div>
    </div>

</body>

</html>